{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "TU Delft spacefinder",
  "description": "An explanation about the purpose of this instance.",
  "required": [],
  "properties": {
    "buildings": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/building"
      }
    }
  },
  "definitions": {
    "timeRange": {
      "type":"string",
      "pattern": "^\\d{2}:\\d{2}-\\d{2}:\\d{2}$"
    },
    "weekDay": {
      "type": "array",
      "items": {"$ref":"#/definitions/timeRange"}
    },
    "openingHours": {
      "type":"object",
      "properties": {
        "mo": { "$ref": "#/definitions/weekDay" },
        "tu": { "$ref": "#/definitions/weekDay" },
        "we": { "$ref": "#/definitions/weekDay" },
        "th": { "$ref": "#/definitions/weekDay" },
        "fr": { "$ref": "#/definitions/weekDay" },
        "sa": { "$ref": "#/definitions/weekDay" },
        "su": { "$ref": "#/definitions/weekDay" }
      }
    },
    "facilities": {
      "type": "object",
      "properties": {
        "spaceType": { "type":"string" },
        "studyPlaces": { "type": "integer" },
        "tables": { "type": "integer" },
        "chairsPerTable": { "type": "integer" },
        "adjustableChairs": { "type": "integer" },
        "fixedChairs": { "type": "integer" },
        "otherSeats": { "type": "integer" },
        "individualStudySeats": { "type": "integer" },
        "availableForSelfStudy": { "type": "integer" },
        "quietness": {
          "type": "string",
          "enum": ["silent", "quiet", "busy"]
        },
        "bookable": { "type": "boolean" },
        "daylit": { "type": "boolean" },
        "powerOutlets": {
          "type": "string",
          "enum": ["none", "all", "some"]
        },
        "ethernet": { "type": "boolean" },
        "stationaryPC": { "type": "boolean" },
        "otherFacilities": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "whiteBoard": { "type": "boolean" },
        "smartBoard": { "type": "boolean" },
        "presentationScreen": { "type": "boolean" },
        "nearCoffeeMachine": { "type": "boolean" },
        "nearPrinter": { "type": "boolean" },
        "nearBathroom": { "type": "boolean" },
        "claimedByGroup": { "type": "boolean" },
        "notes": { "type": "string" }
      }
    },
    "space": {
      "type":"object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "roomId": { "type":"string" },
        "floor": { "type": "string" },
        "lat": { "type": "number" },
        "lng": { "type": "number" },
        "openingHours": { "$ref": "#/definitions/openingHours" },
        "facilities": { "$ref": "#/definitions/facilities" }
      }
    },
    "building": {
      "type":"object",
      "properties": {
        "id": {
          "type":"string"
        },
        "name": {
          "type":"string"
        },
        "lat": {
          "type":"number"
        },
        "lng": {
          "type":"number"
        },
        "openingHours": {
          "$ref": "#/definitions/openingHours"
        },
        "spaces": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/space"
          }
        }
      }
    }
  }
}
