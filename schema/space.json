{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "space.json",
  "description": "A study space at TU Delft",
  "$ref": "#/definitions/space",
  "definitions": {
    "space": {
      "type":"object",
      "properties": {
        "slug": { "type": "string" },
        "name": { "type": "string" },
        "building": {
          "$ref": "building.json"
        },
        "room": {
          "$ref": "#/definitions/room"
        },
        "floor": { "type": "string" },
        "seats": { "type": "integer" },
        "tables": { "type": "integer" },
        "latitude": { "type": "number", "description": "@TODO" },
        "longitude": { "type": "number", "description": "@TODO" },
        "openingHours": { "$ref": "base.json#/definitions/openingHours", "description": "@TODO" },
        "facilities": { "$ref": "#/definitions/facilities" }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "room",
        "floor",
        "seats",
        "tables",
        "building",
        "facilities",
        "slug"
      ]
    },
    "room": {
      "type": "object",
      "properties": {
        "id": {
          "type":"string",
          "description": "Room name"
        }
      },
      "additionalProperties": false,
      "required": ["id"]
    },
    "facilities": {
      "type": "object",
      "properties": {
        "adjustableChairs": { "type": "boolean" },
        "studyType": {
          "type": "string",
          "enum": ["self", "group"]
        },
        "quietness": {
          "type": "string",
          "enum": ["silent", "quiet", "noisy"]
        },
        "bookable": { "type": "boolean" },
        "daylit": { "type": "boolean" },
        "powerOutlets": { "type": "boolean" },
        "ethernet": { "type": "boolean" },
        "stationaryPC": { "type": "boolean" },
        "whiteBoard": { "type": "boolean" },
        "smartBoard": { "type": "boolean" },
        "presentationScreen": { "type": "boolean" },
        "nearCoffeeMachine": { "type": "boolean" },
        "nearPrinter": { "type": "boolean" },
        "nearBathroom": { "type": "boolean" },
        "claimedByGroup": { "type": "boolean" }
      },
      "additionalProperties": false,
      "required":[
        "adjustableChairs",
        "studyType",
        "quietness",
        "bookable",
        "daylit",
        "powerOutlets",
        "ethernet",
        "stationaryPC",
        "whiteBoard",
        "smartBoard",
        "presentationScreen",
        "nearCoffeeMachine",
        "nearPrinter",
        "nearBathroom",
        "claimedByGroup"
      ]
    }
  }
}
