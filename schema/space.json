{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "space.json",
  "description": "A study space at TU Delft",
  "$ref": "#/definitions/space",
  "definitions": {
    "space": {
      "type":"object",
      "properties": {
        "name": { "type": "string" },
        "exchangeBuildingId": {
          "type": "string",
          "description": "Used to map a building to a calendar in exchange"
        },
        "exchangeRoomId": {
          "type": "string",
          "description": "Used to map a room to a calendar in exchange"
        },
        "buildingNumber": { "type":"integer" },
        "roomId": { "type": "string" },
        "floor": { "type": "string" },
        "seats": { "type": "integer" },
        "tables": { "type": "integer" },
        "latitude": { "type": "number", "description": "geospatial latitude" },
        "longitude": { "type": "number", "description": "geospatial longitude" },
        "openingHours": { "$ref": "base.json#/definitions/openingHours", "description": "Opening hours for space" },
        "facilities": { "$ref": "#/definitions/facilities" },
        "i18n": {
          "type": "object",
          "properties": {
            "nl": {
              "$ref": "#/definitions/dictionary"
            },
            "en": {
              "$ref": "#/definitions/dictionary"
            }
          },
          "required": [
            "nl",
            "en"
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false,
      "required": [
        "facilities",
        "floor",
        "i18n",
        "latitude",
        "longitude",
        "name",
        "openingHours",
        "roomId",
        "seats",
        "tables"
      ]
    },
    "dictionary": {
      "type": "object",
      "properties": {
        "spaceName": { "type": "string" },
        "slug": { "type": "string" }
      },
      "required": [
        "spaceName",
        "slug"
      ]
    },
    "facilities": {
      "type": "object",
      "properties": {
        "adjustableChairs": { "type": "boolean" },
        "studyType": {
          "type": "string",
          "enum": ["self", "group"]
        },
        "quietness": {
          "type": "string",
          "enum": ["silent", "quiet", "noisy"]
        },
        "bookable": { "type": "boolean" },
        "daylit": { "type": "boolean" },
        "powerOutlets": { "type": "boolean" },
        "ethernet": { "type": "boolean" },
        "stationaryPC": { "type": "boolean" },
        "whiteBoard": { "type": "boolean" },
        "smartBoard": { "type": "boolean" },
        "presentationScreen": { "type": "boolean" },
        "nearCoffeeMachine": { "type": "boolean" },
        "nearPrinter": { "type": "boolean" },
        "nearBathroom": { "type": "boolean" }
      },
      "additionalProperties": false,
      "required":[
        "adjustableChairs",
        "studyType",
        "quietness",
        "bookable",
        "daylit",
        "powerOutlets",
        "ethernet",
        "stationaryPC",
        "whiteBoard",
        "smartBoard",
        "presentationScreen",
        "nearCoffeeMachine",
        "nearPrinter",
        "nearBathroom"
      ]
    }
  }
}
