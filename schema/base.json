{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "base.json",
  "definitions": {
    "timeRange": {
      "type":"string",
      "pattern": "^\\d{2}:\\d{2}-\\d{2}:\\d{2}$"
    },
    "weekDay": {
      "type": "array",
      "items": {"$ref":"#/definitions/timeRange"}
    },
    "openingHours": {
      "type":"object",
      "properties": {
        "mo": { "$ref": "#/definitions/weekDay" },
        "tu": { "$ref": "#/definitions/weekDay" },
        "we": { "$ref": "#/definitions/weekDay" },
        "th": { "$ref": "#/definitions/weekDay" },
        "fr": { "$ref": "#/definitions/weekDay" },
        "sa": { "$ref": "#/definitions/weekDay" },
        "su": { "$ref": "#/definitions/weekDay" }
      },
      "required": [
        "mo",
        "tu",
        "we",
        "th",
        "fr",
        "sa",
        "su"
      ]
    }
  }
}
