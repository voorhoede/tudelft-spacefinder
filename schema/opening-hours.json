{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "opening-hours.json",
  "description": "Opening hours for buildings and rooms",
  "$ref": "#/definitions/openingHours",
  "definitions": {
    "timeRange": {
      "type": "string"
    },
    "weekDay": {
      "type": "object",
      "properties": {
        "day": {
          "type": "string",
          "enum": ["mo", "tu", "we", "th", "fr", "sa", "su"]
        },
        "time": {
          "type": "array",
          "items": {
            "type":"array",
            "items": {
              "$ref": "#/definitions/timeRange"
            }
           }
        }
      }
    },
    "openingHours": {
      "type":"object",
      "properties": {
        "id": { "type": "string" },
        "openingHours": {
          "type":"array",
          "items": {
            "$ref": "#/definitions/weekDay"
          },
          "minItems": 7,
          "maxItems": 7
        }
      },
      "required": [
        "id",
        "openingHours"
      ],
      "additionalItems": false
    }
  }
}
